  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"email\": \"alice@email.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/users",
          "host": ["localhost"],
          "port": "8080",
          "path": ["users"]
        }
      }
    },
