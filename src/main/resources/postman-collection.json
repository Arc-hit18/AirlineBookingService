        }
      }
    },
    {
      "name": "Find Flights with k Stops",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/search?src=DEL&dest=BOM&date=2025-12-15&stops=2",
          "host": ["localhost"],
          "port": "8080",
          "path": ["search"],
          "query": [
            { "key": "src", "value": "DEL" },
